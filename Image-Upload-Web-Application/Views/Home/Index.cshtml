@model ImageUploadWebApplication.Models.ImageUploadModel

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">


<h2>Upload de Imagem</h2>

<form asp-action="UploadSQl" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="descricao" class="control-label">Descrição da imagem</label>
        <input id="descricao" name="descricao" class="form-control" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="imagem">Upload do Arquivo</label>
        <input type="file" class="form-control" id="imagem" name="imagem" accept="image/*" required />
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-success mt-3">@ViewBag.Message</div>
}


@if (ViewBag.InsertedId != null)
{
    <img src="@Url.Action("MostrarImagem", "Home", new { id = ViewBag.InsertedId })" alt="Imagem"  height="400" />
}

<!-- Incluindo o Bootstrap JS (opcional, caso deseje funcionalidades interativas) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>